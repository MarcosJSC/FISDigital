<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FISWrapperGrid">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginRight">75dp</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="FISRowGrid">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">24dip</item>
    </style>

    <style name="FISRowGridRadio" parent="FISRowGrid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">14dip</item>
    </style>

    <style name="FISTextViewTitle">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="FISTextViewTitleNested" parent="FISTextViewTitle">
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="FISTextView">
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:layout_width">700dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FISTextViewMedium">
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FISTextViewError" parent="FISTextView">
        <item name="android:background">#ff4445</item>
        <item name="android:textColor">#ff4445</item>
    </style>

    <style name="FISTextViewErrorRB">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">#ff4445</item>
    </style>

    <style name="FISEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
    </style>

    <style name="FISEditTextLogin" parent="FISEditText">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_width">350dp</item>
    </style>

    <style name="FISEditTextArea" parent="FISEditText">
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="FISEditTextAreaError" parent="FISEditText">
        <item name="android:layout_height">100dp</item>
        <item name="android:background">#ff4445</item>
        <item name="android:textColor">#ff4445</item>
    </style>

    <style name="FISEditTextSmall" parent="FISEditText">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <style name="FISEditTextSmallLeftMargin" parent="FISEditTextSmall">
        <item name="android:layout_marginLeft">24dip</item>
    </style>

    <style name="FISEditTextMedium" parent="FISEditText">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <style name="FISEditTextMediumLeftMargin" parent="FISEditTextMedium">
        <item name="android:layout_marginLeft">24dip</item>
    </style>

    <style name="FISButton">
        <item name="android:background">#ffffa00e</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="FISRadioButton">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="FISRadioGroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FISButtonCatalogo" parent="FISButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="FISButtonSiguiente" parent="FISButton">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FISButtonLogin" parent="FISButtonSiguiente">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="FISButtonFinalizar" parent="FISButton">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#99cc00</item>
    </style>

    <style name="FISRowTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FISRowButton" parent="FISButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>        >
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>


</resources>
