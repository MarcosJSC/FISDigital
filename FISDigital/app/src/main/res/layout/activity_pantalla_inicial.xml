<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cr.bamboo.fisdigital.layout.activity.Activity_PantallaInicial">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="3"
        android:rowCount="1">

        <GridLayout android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="4"
            android:layout_column="0"
            android:layout_row="0">

            <TextView
                android:text="FICHA DE INFORMACIÓN SOCIAL"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="22dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp" />

            <ImageView
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/list"
                android:layout_gravity="center_horizontal|top"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp" />

            <Button
                android:id="@+id/btnIniciarFIS"
                android:text="LISTAR FIS"
                android:layout_column="0"
                android:layout_row="2"
                style="@style/FISButtonSiguiente"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btnLogout"
                android:text="CERRAR SESIÓN"
                android:layout_column="0"
                android:layout_row="3"
                style="@style/FISButtonSiguiente"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp" />


        </GridLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_column="1"
            android:background="#ffffa00e"
            android:layout_row="0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp">
            <View
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="#FF0000FF"/>
        </LinearLayout>

        <GridLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="4"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal">

            <TextView
                android:text="SINCRONIZAR LOS DATOS"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="22dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp" />

            <ImageView
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/reload"
                android:layout_gravity="center_horizontal|top"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp" />

            <Button
                android:id="@+id/btnSincronizarEnviar"
                android:text="ENVIAR FIS CREADA"
                android:layout_column="0"
                android:layout_row="2"
                style="@style/FISButtonSiguiente"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btnSincronizarObtener"
                android:text="SINCRONIZAR CATALOGOS"
                android:layout_column="0"
                android:layout_row="3"
                style="@style/FISButtonSiguiente"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp" />

        </GridLayout>

        </GridLayout>

</RelativeLayout>
